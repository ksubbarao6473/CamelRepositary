genRepApplication.factory('LoginService', function($http, LoadMainTransaction,
		$window) {
	var info = [];
	var loginUser = "USER_01";
	return {
		setPageInfo : function(pageInfo) {
			info = pageInfo;
			return;
		},
		getPageInfo : function() {
			return info;
		},
		setLoginUser : function(userName,countryCode) {
			$window.localStorage
					&& $window.localStorage.setItem('mystorage', userName);
			$window.localStorage
			&& $window.localStorage.setItem('countryCode', countryCode);

			loginUser = userName;
			return;
		},
		getLoginUser : function() {
			return $window.localStorage
					&& $window.localStorage.getItem('mystorage');
			// return loginUser;
		},
		getCountryCode : function() {
			return $window.localStorage
					&& $window.localStorage.getItem('countryCode');
			// return loginUser;
		},
		
		validateCall : function(url, myJSONObject, fileName) {

			return $http.post(url, myJSONObject);
		}
	};
});

genRepApplication.factory('LoadMainTransaction', function($http, $window) {
	var transactionInformation = {};
	var createInformation = [];
	var pageNavigator = [];
	var pageTabNo = "1";
	var po_Hide = "SHOW";
	var shipment = "";

	return {

		getCreateTransaction : function(transactionInfo, poHide) {
			transactionInformation = transactionInfo;
			po_Hide = poHide;
			return;
		},
		setTransaction : function() {
			return transactionInformation;
		},
		fetchPoLine : function(url, purchaseOrderRequest) {
			return $http({
				url : url,
				method : "GET",
				params : {
					'fetchRequest' : purchaseOrderRequest
				},
				headers : {
					'Content-Type' : 'application/json'
				}
			});
		},
		searchPoLine : function(url, searchCriterias) {
			return $http({
				url : url,
				method : "GET",
				params : {
					'searchCriterias' : searchCriterias
				},
				headers : {
					'Content-Type' : 'application/json'
				}
			});
		},
		setShipmentAsString : function(shipmentJsonS) {
			shipment = shipmentJsonS;
			alert(shipment)
			return;
		},
		getShipmentAsString : function() {

			return shipment;
		},
		setPageNavigator : function() {
			return pageNavigator;
		},
		getPoHide : function() {
			return po_Hide;
		},
		setPageTab : function(newPageTabNo) {
			pageTabNo = newPageTabNo;
			return;
		},
		getPageTab : function() {
			return pageTabNo;
		}

	};
});
